{
  "compilerOptions": {
    "alwaysStrict": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "target": "es5",
    "lib": ["dom", "es2016"],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "dist/src",
    "baseUrl": ".",
    "paths": {
      "*": ["."],
      "root": ["."]
    },
    "resolveJsonModule": true,
  },
  "files": [
    "./super-utils.d.ts"
  ],
  "include": [
    "test/**/*",
    "src/**/*",
    "./super-utils.d.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}