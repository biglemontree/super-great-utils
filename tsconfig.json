{
  "compilerOptions": {
    "alwaysStrict": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "target": "es5",
    "lib": ["dom", "es2016"],
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "outDir": "dist",
    "baseUrl": ".",
    // "declaration": true,
    // "declarationDir": "./types",
    "paths": {
      "root": ["."],
    },
    "resolveJsonModule": true,
  },
  "files": [
    "./index.d.ts"
  ],
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}