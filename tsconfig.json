{
  "compilerOptions": {
    "alwaysStrict": false,
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "target": "es5",
    "lib": ["dom", "es2016"],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "dist/src",
    "baseUrl": ".",
    "paths": {
      "*": ["."],
      "root": ["."]
    },
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "mochawesome-report",
    "test"
  ]
}